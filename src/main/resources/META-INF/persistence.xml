<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="lab2" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>vn.edu.iuh.fit.models.Customer</class>
        <class>vn.edu.iuh.fit.models.Employee</class>
        <class>vn.edu.iuh.fit.models.Order</class>
        <class>vn.edu.iuh.fit.models.OrderDetail</class>
        <class>vn.edu.iuh.fit.models.Product</class>
        <class>vn.edu.iuh.fit.models.ProductImage</class>
        <class>vn.edu.iuh.fit.models.ProductPrice</class>
        <class>vn.edu.iuh.fit.convert.OrderByDateDTO</class>
        <class>vn.edu.iuh.fit.convert.OrderByMonthDTO</class>
        <class>vn.edu.iuh.fit.convert.OrderByEmployeeMonthDTO</class>
        <class>vn.edu.iuh.fit.convert.ProductPricePath</class>


        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/week2?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="sapass"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>

    </persistence-unit>
</persistence>
